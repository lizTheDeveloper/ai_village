{
  "name": "@ai-village/core-wasm",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "build": "npm run build:pathfinding && npm run build:simd",
    "build:pathfinding": "asc assembly/pathfinding.ts --outFile build/pathfinding.wasm --optimize --runtime stub --exportRuntime --exportTable --memoryBase 0",
    "build:simd": "asc assembly/simd-ops.ts --outFile build/simd-ops.wasm --optimize --runtime stub --exportRuntime --exportTable --memoryBase 0 --enable simd",
    "build:debug": "asc assembly/pathfinding.ts --outFile build/pathfinding.debug.wasm --debug --runtime stub --exportRuntime --exportTable --memoryBase 0"
  },
  "devDependencies": {
    "assemblyscript": "^0.27.0"
  }
}
